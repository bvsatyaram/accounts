<% @title = "#{@user.name}" %>
<% @page_action = link_to("Edit profile", edit_user_path(@user)) if (current_user == @user || current_user.app_admin?) %>

<div id="user_show">
  <div>
  <%= label_tag "Name" %>
  <%= @user.name %>
  </div>
  <div>
  <%= label_tag "Nick Name" %>
  <%= @user.nick_name || "<i>Not specified</i>"%>
  </div>
  <div>
  <%= label_tag "Email" %>
  <%= @user.email %>
  </div>
  <div>
    <%= label_tag "Groups" %>
    <ul class="clearfix">
    <%  @user.groups.each do |group| %>
      <li class="groups_list"><%= group.name %></li>
    <% end %>
    </ul>
  </div>
</div>

<style>
  li.groups_list{
    float: left;
    margin-left: 20px;
  }

  #user_show div{
    float: left;
    width: 60%;
    margin: 10px;
  }

  #user_show i{
    color : #888;
  }
</style>