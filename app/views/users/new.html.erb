<% @title = "Register as new uesr" %>
<% @page_action = link_to("Sign in", login_path) %>

<div id="new_user">
<span>
  If you are already an existing user <%= link_to("click here", login_path) %> to login
</span>

<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "Submit", :class => "button" %>
  </p>
<% end %>
</div>