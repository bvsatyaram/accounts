<fieldset class="group_details">
  <legend>Group Details</legend>
  <%= render :partial => "groups/pay_suggestions", :locals => {:group_user => @group_user, :full_view => (current_user == @group.admin)} %>

  <% unless @group.description.blank? %>
    <div>
      <span>Descritpion</span> <%= @group.description %>
    </div>
  <% end %>
  <% if current_user == @group.admin %>
    <div>
      <span>Invite Url</span>
      <%= link_to new_user_url(:group_code => @group.code), new_user_url(:group_code => @group.code) %>
    </div>
    <%= link_to("Delete this group", group_path(@group), :method => :delete,
      :confirm => "Are you sure you want to delete this group?", :class => 'button', :style => 'float:right') %>
  <% end %>
  <table>
    <tr>
      <th> Group members </th>
      <th> Credit </th>
    </tr>
    <% @group.group_users.each do |group_user| %>
      <tr>
        <td> <%= group_user.user.name %> </td>
        <td> Rs. <%= group_user.balance %> </td>
      </tr>
    <% end %>
  </table>
</fieldset>

<style>
  #group_show .group_details{
    margin-bottom: 10px;
  }

  #group_show .group_details div{
    width: 100%;
    float: left;
    margin: 0 0 5px 0;
  }

  #group_show .group_details span{
    float: left;
    color: #337733;
    font-weight: bold;
    margin: 5px 5px 0px 0px;
    width: 100%;
  }
</style>