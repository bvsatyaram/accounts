<style>
  dt{
    float: left;
    margin-right: 10px;
  }
</style>

<% @title = "Your groups" %>
<% @page_action = link_to("Create new group", new_group_path) %>

<div id="groups">
  <% unless @groups.count > 0 %>
    You have no groups yet
  <% else %>
    <div>
      <% @groups.each do |group| %>
        <div id="group_<%= group.id %>">
          <%= link_to group.name, group_path(group) %> <br>
          <span>
            <%= group.description %>
          </span>
          <%= link_to("Delete this group", group_path(group), :method => :delete,
            :confirm => "Are you sure you want to delete this group?")  if (current_user == group.admin) %>
          <dl>
            <% group.group_users.each do |group_user| %>
              <dt> <%= group_user.user.name %> </dt>
              <dd> Rs: <%= group_user.balance %> </dd>
            <% end %>
          </dl>
        </div>
        <hr>
      <% end %>
    </div>
  <% end %>
</div>
