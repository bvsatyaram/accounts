<% @title = @group.name.humanize %>
<% @page_action = link_to("Add a new common item", "") %>

<div id="group_show">
  <div id="group_<%= @group.id %>">
    <span>
      <%= @group.description %>
    </span>
    <%= link_to("Delete this group", group_path(@group), :method => :delete,
      :confirm => "Are you sure you want to delete this group?") if current_user == @group.admin %>
    <dl>
      <% @group.group_users.each do |group_user| %>
        <dt> <%= group_user.user.name %> </dt>
        <dd> Rs: <%= group_user.balance %> </dd>
      <% end %>
    </dl>
  </div>
</div>