<html>
  <head>
    <title>My Money</title>
    <%= stylesheet_link_tag "account" %>
    <%= javascript_include_tag :defaults %>
  </head>

  <body id="log">
    <div id="swip_header" class="clearfix">
      <%= mail_to "mrudhu@gmail.com", "SWiP", :id => "swip"  %>
      <div id="header_actions">
        <% if current_user %>
          <%= link_to 'My groups', groups_path %>
          <%= link_to 'Logout', logout_path, :class => "last" %>
        <% else %>
          <%= link_to 'Login', login_path, :class => "last" %>
        <% end %>
      </div>
    </div>
    <div id="banner" class="clearfix">
      <div class="title">
        <%= @page_title || "My Money Transactions" %>
      </div>
    </div>
    <div id="columns" class="clearfix">
      <div id="side" style="float:left;">
        <%= render :partial => "common/overview" if current_user %>
      </div>
      <div id="main" class="clearfix">
        <div id="title_box">
          <div id="title_actions">
            <%= @page_action %>
          </div>
          <div id="title_name">
            <h1><%= @title || "My Money" %></h1>
          </div>
        </div>
        <div id="inner_content" class="clearfix">
          <div id="flash_message">
            <% if flash[:notice] -%>
              <div id="notice">
                <%= flash[:notice] %>
              </div>
            <% elsif flash[:error] %>
              <div id="error">
                <%= flash[:error] %>
              </div>
            <% end -%>
          </div>

          <%= yield :layout %>
        </div>
      </div>
    </div>
  </body>
</html>